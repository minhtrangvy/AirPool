<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/departure_time_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/airport_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/college_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mode_of_transportation_text"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:text="@string/groupMembers" />

    <!-- List whose dataset is defined in code with an adapter -->
    <ListView
        android:id="@+id/group_members_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />

    <!-- Set OnClickListener to trigger when pressed -->
    <Button
        android:id="@+id/groupWall_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="#fdb62a"
        android:layout_marginBottom="10dp"
        android:text="@string/groupWall"
        android:visibility="gone" />

    <Button
        android:id="@+id/edit_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="#fdb62a"
        android:layout_marginBottom="10dp"
        android:text="@string/editGroup"
        android:visibility="gone"/>

    <Button
        android:id="@+id/leave_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="#fdb62a"
        android:layout_marginBottom="10dp"
        android:text="@string/leaveGroup"
        android:visibility="gone"/>

    <Button
        android:id="@+id/join_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="#fdb62a"
        android:layout_marginBottom="10dp"
        android:text="@string/joinGroup"
        android:visibility="gone"/>

</LinearLayout>
