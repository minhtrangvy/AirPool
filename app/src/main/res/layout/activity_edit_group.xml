<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/createGroupInstruc"/>


    <!-- Spinner Element for direction preference -->
    <Spinner
        android:id="@+id/toFrom_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/toFrom_spinner"
        />

    <!-- Spinner Element for airport preference -->
    <com.airpool.View.AirportSpinner
        android:id="@+id/airport_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/airport_spinner"
        />

    <!-- Spinner Element for college preference -->
    <com.airpool.View.CollegeSpinner
        android:id="@+id/college_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/colleges_spinner"
        />

    <!-- Spinner Element for transportation preference -->
    <com.airpool.View.TransportationPreferenceSpinner
        android:id="@+id/trans_pref_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/transportation_spinner"
        />

    <!--Date and Time selection for leaving location-->
    <Button
        android:id="@+id/selectDate_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectDate" />

    <Button
        android:id="@+id/selectTime_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectTime" />



    <!-- Set OnClickListener to create group when pressed -->
    <Button
        android:id="@+id/create_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createGroup_button" />

</LinearLayout>