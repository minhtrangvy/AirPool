<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.airpool" >

    <!-- Needed permissions. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.airpool.GlobalUser">
        <activity
            android:name="com.airpool.HomepageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.airpool.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity android:name="com.facebook.LoginActivity" >
        </activity>
        <activity
            android:name="com.airpool.ViewGroupActivity"
            android:label="@string/title_activity_view_group" >
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name="com.airpool.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name=".EditGroupActivity"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name="com.airpool.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.airpool.GroupWallActivity"
            android:label="@string/title_activity_group_wall" >
        </activity>
    </application>

</manifest>
